@using MyPortfolioAspNetMvc5.Models.Entity
@model List<Abouts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}



<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hakkımda Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Hakkımda Listesi</h3>
                            <br />
                            <small class="card-subtitle">Lütfen tema bütünlüğü için burada tek bir alan bulundurun.</small>
                            <br />
                            <br />
                            <a href="/Certificate/AddCertificate/" class="btn btn-outline-primary"><i class="fa fa-pencil-alt"></i>&nbsp; Yeni Alan Ekle</a>
                            <br />
                            <br />
                        </div>

                        <div class="card-body">
                            <table class="table table-responsive-lg table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th>Adress</th>
                                        <th>Telefon No</th>
                                        <th>Mail</th>
                                        <th>Description</th>
                                        <th>ImageURL</th>
                                        <th colspan="2" class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                       <tr>
                                           <td>@count</td>
                                           <td>@item.Name</td>
                                           <td>@item.Surname</td>
                                           <td>@item.Adress</td>
                                           <td>@item.PhoneNumber</td>
                                           <td>@item.Mail</td>
                                           <td>@item.Description.Substring(0,10)..</td>
                                           <td>@item.ImageURL</td>
                                           <td><a class="btn btn-outline-danger" href="/Abouts/DeleteAbout/@item.AboutID"><i class="fa fa-trash"></i>Sil</a></td>
                                           <td><a class="btn btn-outline-success" href="/Abouts/UpdateAbout/@item.AboutID"><i class="fa fa-edit"></i>  Güncelle</td>

                                       </tr>

                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")








