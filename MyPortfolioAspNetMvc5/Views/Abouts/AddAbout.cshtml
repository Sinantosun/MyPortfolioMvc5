@using MyPortfolioAspNetMvc5.Models.Entity
@model Abouts

@{
    ViewBag.Title = "Hakkımda Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hakkımda Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <br />
                            <h3 class="card-title">Yeni Hakkımda Ekleme Sayfası</h3><br /><br />
                        </div>

                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="form-group">
                                        @Html.Label("Ad")
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Soyad")
                                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Telefon Numarası")
                                        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Email")
                                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Adress")
                                        @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Açıklama")
                                        @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Görsel Seçiniz")
                                        <input type="file" name="ImageURL" />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary"><i class="fa fa-pen"></i>&nbsp; Ekle</button>
                                    </div>
                                    @Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>













