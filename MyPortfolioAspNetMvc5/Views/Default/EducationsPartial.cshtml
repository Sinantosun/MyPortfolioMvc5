@using MyPortfolioAspNetMvc5.Models.Entity
@model List<Educations>
<div class="container">
    <section class="resume-section" id="education">
        <div class="resume-section-content">
            <h2 class="mb-5">Eğitimlerim</h2>
            @foreach (var item in Model)
            {
                <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@item.Title</h3>
                        <div class="subheading mb-3">@item.SubTitle1</div>
                        <div>@item.SubTitle2</div>
                        <p>@(string.IsNullOrEmpty(item.EducationGNO)?"Aktif olarak devam ediyor.": "GNO : "+item.EducationGNO)</p>
                    </div>
                    <div class="flex-shrink-0"><span class="text-primary">@item.Date</span></div>
                </div>
            }


        </div>
    </section>

</div>
