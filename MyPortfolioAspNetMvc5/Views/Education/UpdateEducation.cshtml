@using MyPortfolioAspNetMvc5.Models.Entity
@model Educations
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Eğitimlerim  Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <br />
                            <h3 class="card-title">Eğitim Güncelleme Sayfası</h3><br /><br />
                        </div>

                        <div class="card-body">
                            <form method="post">
                                @Html.HiddenFor(x => x.EducationID, new { @class = "form-control" })
                                <div class="card-body">
                                    <div class="form-group">
                                        @Html.Label("Başlık")
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("1. Alt Başlık")
                                        @Html.TextBoxFor(x => x.SubTitle1, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("2. Alt Başlık")
                                        @Html.TextBoxFor(x => x.SubTitle2, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("GNO")
                                        @Html.TextBoxFor(x => x.EducationGNO, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Tarih")
                                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary"><i class="fa fa-edit"></i>&nbsp; Güncelle</button>
                                    </div>
                                </div>
                                @Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")
                            </form>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </section>

</div>

























