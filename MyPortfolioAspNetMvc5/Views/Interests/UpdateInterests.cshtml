@using MyPortfolioAspNetMvc5.Models.Entity
@model  Interests


@{
    ViewBag.Title = "UpdateInterests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hobilerim Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <br />
                            <h3 class="card-title">Hobi Güncelleme Sayfası</h3><br /><br />
                        </div>

                        <div class="card-body">
                            <form method="post">
                                @Html.HiddenFor(x => x.InterestsID)
                                <div class="card-body">
                                    <div class="form-group">
                                        @Html.Label("1.Açıklama")
                                        <textarea name="Description" class="form-control" rows="5">@Model.Description</textarea>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("2.Açıklama")
                                        <textarea name="Description2" class="form-control" rows="5">@Model.Description2</textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary"><i class="fa fa-edit"></i>&nbsp; Güncelle</button>
                                    </div>

                                    @Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

























