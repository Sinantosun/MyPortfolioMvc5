@model List<MyPortfolioAspNetMvc5.Models.Entity.Contacts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@if (Model.Count > 0)
{
    <section class="content">
        <div class="row">

            <div class="col-md-12">
                @foreach (var item in Model)
                {
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesajlar</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover table-striped">
                                    <tbody>
                                        <tr>
                                            <td class="mailbox-name"><a href="read-mail.html">@item.NameSurname</a></td>
                                            <td class="mailbox-subject">
                                                <b>@item.Title</b>
                                            </td>
                                            <td class="mailbox-attachment"></td>
                                            <td class="mailbox-date">@item.MessageDate</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
}
else
{
    <div class="d-flex justify-content-start"></div>
    <div class="d-flex justify-content-end"></div>
    <div class="d-flex justify-content-center"><div class="alert alert-info">Ooopps!.. burada henüz hiç mesaj yok :(</div></div>
    <div class="d-flex justify-content-between"></div>
    <div class="d-flex justify-content-around"></div>
}








