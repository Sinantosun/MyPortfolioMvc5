
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Giriş Yap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css">

    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b class="font-weight-light">Cv Admin Paneli Girişi</b>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Devam edebilmek için giriş yapın.</p>

                <form method="post">
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" name="UserName" placeholder="Kullanıcı Adı">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" name="Pwd" placeholder="Şifre">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <br />
                <p class="mb-1 text-danger">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </p>
                <p class="mb-1">
                    <a href="forgot-password.html">Şifremi Unuttum</a>
                </p>

            </div>
        </div>
    </div>

</body>
</html>

@if (TempData["Result"] != null)
{
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
    <script>
        Swal.fire({
            title: "Oturum Süresi Doldu",
            text: "Aktif oturumun süresi dolmuştur işlemlerinize devam edebilmek için tekrar giriş yapmalısınız.",
            icon: "info"
        });
    </script>

}
