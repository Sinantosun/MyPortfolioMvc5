@using MyPortfolioAspNetMvc5.Models.Entity
@model List<ProjectImages>
@{
    ViewBag.Title = "ProjectsImages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Projelerim Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@ViewBag.ProjectName</h3><br /><br /> 
                        </div>

                        <div class="card-body">
                            <table class="table table-responsive-lg table-hover">
                                <thead>
                                    <tr>
                                        <th>Görsel</th>
  
                                        <th colspan="2" class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="@item.ImageURL" target="_blank"><img src="@item.ImageURL" style="width:100%; object-fit:cover; height:200px;" class="img-thumbnail" /></a></td>
                                            <td><a href="/Projects/DeleteProjectImage/@item.ProjectImageID" class="btn btn-outline-danger" ><i class="fa fa-trash"></i>&nbsp; Sil</a></td>
                                            <td><a href="/Projects/UpdateProjectImage/@item.ProjectImageID" class="btn btn-outline-success"><i class="fa fa-edit"></i>&nbsp; Güncelle</a></td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")








