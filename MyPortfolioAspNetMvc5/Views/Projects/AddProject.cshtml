@using MyPortfolioAspNetMvc5.Models.Entity
@model Projects
@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Projelerim Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <br />
                            <h3 class="card-title">Yeni Proje Ekleme Sayfası</h3><br /><br />
                        </div>

                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="form-group">
                                        @Html.Label("Proje Adı")
                                        @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Proje Başlığı")
                                        @Html.TextBoxFor(x => x.ProjectTitle, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Proje GitHubURL")
                                        @Html.TextBoxFor(x => x.ProjectGithubURL, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Kapak Görseli</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" name="ProjectImage" class="custom-file-input" id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">Proje Kapak Görselini Seçiniz</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Proje Açıklaması (500 karakter)")
                                        <textarea class="form-control" name="ProjectDescription" id="summernote" asp-for="ContentBody"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary"><i class="fa fa-pen"></i>&nbsp; Ekle</button>
                                    </div>
                                    @Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
    $('#summernote').summernote({
        placeholder: 'Mesajınızı Giriniz.',
        tabsize: 2,
        height: 300,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>






