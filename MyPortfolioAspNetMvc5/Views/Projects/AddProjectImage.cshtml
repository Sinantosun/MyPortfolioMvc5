@using MyPortfolioAspNetMvc5.Models.Entity
@model ProjectImages
@{
    ViewBag.Title = "AddProjectImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Projelerim Alanı</h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <br />
                            <h3 class="card-title">Projeye Görseli Ekleme Sayfası</h3><br /><br />
                        </div>

                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="form-group">
                                        <span>Proje Adını Seçiniz</span>
                                        <br />
                                        @Html.DropDownListFor(x => x.ProjectID, (List<SelectListItem>)ViewBag.ProjectNameList, "Seçiniz", new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Görsel</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" name="ImageURL" class="custom-file-input" id="exampleInputFile">
                                                <label class="custom-file-label" for="exampleInputFile">Görselini Seçiniz</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary"><i class="fa fa-pen"></i>&nbsp; Ekle</button>
                                    </div>
                                    @Html.Partial("~/Views/LayoutPartial/NotificationPartial.cshtml")
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>










